<section class="mt-32 mb-10 reveal-section" id="contact">
  <div class="glass rounded-[40px] p-8 md:p-10 relative overflow-hidden">
    <div
      class="absolute top-0 right-0 w-64 h-64 bg-blue-600/5 blur-[100px] rounded-full -translate-y-1/2 translate-x-1/2"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-64 h-64 bg-purple-600/5 blur-[100px] rounded-full translate-y-1/2 -translate-x-1/2"
    >
    </div>

    <div class="relative z-10 grid md:grid-cols-2 gap-12 items-start">
      <div>
        <h2
          class="text-4xl md:text-6xl font-black tracking-tighter text-slate-900 dark:text-white leading-none"
        >
          Let's <br />
          <span class="text-blue-600 dark:text-blue-400">Connect.</span>
        </h2>
        <p
          class="mt-8 text-lg text-slate-500 dark:text-slate-400 font-medium max-w-sm"
        >
          Have a project in mind or just want to say hi? I'm always open to new
          opportunities and collaborations.
        </p>

        <div class="mt-10 flex flex-col gap-4">
          <a
            href="mailto:bayuapriansyah2022@gmail.com"
            class="flex items-center gap-4 text-slate-900 dark:text-white font-bold group w-fit break-all"
          >
            <div
              class="w-12 h-12 rounded-2xl glass flex items-center justify-center group-hover:bg-blue-600/10 transition-colors"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-6 h-6 text-blue-600 dark:text-blue-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2.5"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
            <span
              class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors break-all"
            >
              bayuapriansyah2022@gmail.com
            </span>
          </a>
        </div>
      </div>

      <form
        action="https://api.web3forms.com/submit"
        method="POST"
        id="form"
        class="flex flex-col gap-4 w-full overflow-hidden"
      >
        <input
          type="hidden"
          name="access_key"
          value="c64ff2e4-aab4-47ca-8b4e-0b49665eaaa6"
        />

        <input type="checkbox" name="botcheck" class="hidden" />

        <div class="flex flex-col gap-2 w-full">
          <input
            type="text"
            name="name"
            placeholder="Name"
            required
            class="w-full px-6 py-4 bg-slate-50 dark:bg-slate-950/50 border border-slate-200 dark:border-white/10 rounded-2xl focus:outline focus:outline-2 focus:outline-sky-500 text-slate-900 dark:text-white placeholder:text-slate-400 dark:placeholder:text-slate-600 transition-all"
          />
        </div>

        <div class="flex flex-col gap-2 w-full">
          <input
            type="email"
            name="email"
            placeholder="Email Address"
            required
            class="w-full px-6 py-4 bg-slate-50 dark:bg-slate-950/50 border border-slate-200 dark:border-white/10 rounded-2xl focus:outline focus:outline-2 focus:outline-sky-500 text-slate-900 dark:text-white placeholder:text-slate-400 dark:placeholder:text-slate-600 transition-all"
          />
        </div>

        <div class="flex flex-col gap-2 w-full">
          <textarea
            name="message"
            rows="4"
            placeholder="Message"
            required
            class="w-full px-6 py-4 bg-slate-50 dark:bg-slate-950/50 border border-slate-200 dark:border-white/10 rounded-2xl focus:outline focus:outline-2 focus:outline-sky-500 text-slate-900 dark:text-white placeholder:text-slate-400 dark:placeholder:text-slate-600 transition-all resize-none"
          ></textarea>
        </div>

        <button
          type="submit"
          class="w-full py-5 bg-slate-900 dark:bg-white text-white dark:text-slate-950 font-black text-lg rounded-2xl shadow-xl hover:shadow-2xl hover:shadow-blue-500/10 transition-all duration-300"
        >
          Send Message
        </button>

        <div
          id="result"
          class="mt-2 text-center text-sm font-bold min-h-[1.25rem]"
        >
        </div>
      </form>
    </div>
  </div>
</section>

<script is:inline>
  function setupContactForm() {
    const form = document.getElementById("form");
    const result = document.getElementById("result");

    if (!form) return;

    form.onsubmit = async (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const json = JSON.stringify(Object.fromEntries(formData));

      result.textContent = "Sending your message...";
      result.className =
        "mt-4 text-center text-sm font-bold text-blue-500 animate-pulse";

      try {
        const response = await fetch("https://api.web3forms.com/submit", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            Accept: "application/json",
          },
          body: json,
        });

        const data = await response.json();

        if (response.status === 200) {
          result.className =
            "mt-4 text-center text-sm font-bold text-emerald-500";
          result.textContent = "Message sent successfully!";
          form.reset();
        } else {
          result.className = "mt-4 text-center text-sm font-bold text-red-500";
          result.textContent = data.message || "Failed to send message.";
        }
      } catch {
        result.className = "mt-4 text-center text-sm font-bold text-red-500";
        result.textContent = "Network error. Please try again.";
      }

      setTimeout(() => {
        result.textContent = "";
        result.className = "mt-4 text-center text-sm font-bold";
      }, 3000);
    };
  }

  setupContactForm();
  document.addEventListener("astro:after-swap", setupContactForm);
</script>

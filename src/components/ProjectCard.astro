---
const { image, title, desc, tags = ["Product", "Dev"] } = Astro.props;
---

<div class="project-card group glass rounded-[32px] overflow-hidden flex flex-col h-full transition-all duration-00 hover:scale-[1.02] hover:shadow-2xl hover:shadow-blue-500/10 opacity-0 translate-y-10 mb-10">
  <div class="relative aspect-[16/10] overflow-hidden">
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover transition-transform duration-400 group-hover:scale-105"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-slate-950/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700 flex items-end p-6">
       <div class="flex gap-2">
         {tags.map((tag: any) => (
           <span class="px-3 py-1 glass text-[10px] font-bold uppercase tracking-widest text-white rounded-full">{tag}</span>
         ))}
       </div>
    </div>
  </div>
  
  <div class="p-8 flex flex-col flex-grow">
    <div class="flex justify-between items-start mb-2">
      <h3 class="text-2xl font-black tracking-tighter text-slate-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
        {title}
      </h3>
      <div class="w-10 h-10 rounded-full border border-slate-200 dark:border-white/10 flex items-center justify-center -rotate-45 group-hover:rotate-0 transition-transform duration-500">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-slate-900 dark:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </div>
    </div>
    <p class="text-slate-600 dark:text-slate-400 leading-relaxed font-medium">
      {desc}
    </p>
  </div>
</div>
